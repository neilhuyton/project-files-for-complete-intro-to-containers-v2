apiVersion: apps/v1
kind: Deployment
metadata:
  annotations:
    kompose.cmd: kompose convert --build local
    kompose.image-pull-policy: Always
    kompose.service.type: nodeport
    kompose.version: 1.36.0 (ae2a39403)
  labels:
    io.kompose.service: api
  name: api
spec:
  replicas: 1
  selector:
    matchLabels:
      io.kompose.service: api
  template:
    metadata:
      annotations:
        kompose.cmd: kompose convert --build local
        kompose.image-pull-policy: Always
        kompose.service.type: nodeport
        kompose.version: 1.36.0 (ae2a39403)
      labels:
        io.kompose.service: api
    spec:
      containers:
        - env:
            - name: MONGO_CONNECTION_STRING
              value: mongodb://db:27017
          # image: api
          image: us-central1-docker.pkg.dev/model-ripple-467310-c7/my-repo/api:latest
          # imagePullPolicy: Never
          imagePullPolicy: Always
          name: api
          ports:
            - containerPort: 8080
              protocol: TCP
      restartPolicy: Always
